{
  "name": "typescript-api-starter",
  "version": "0.1.0",
  "description": "Starter for Node.js express API with Typescript",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:cham11ng/typescript-api-starter.git"
  },
  "author": {
    "name": "Sagar Chamling",
    "email": "sgr.raee@gmail.com"
  },
  "engines": {
    "node": ">= 10.16.0",
    "yarn": ">= 1.16.0"
  },
  "scripts": {
    "start": "backpack",
    "clean": "rimraf build",
    "transpile": "backpack build",
    "build": "run-s clean lint:fix transpile",
    "send:mail": "ts-node scripts/mail-test",
    "load:fake": "NODE_ENV=test ts-node scripts/fake-loader",
    "test": "NODE_ENV=test yarn migrate && NODE_ENV=test jest --forceExit --detectOpenHandles --maxWorkers=1",
    "seed": "knex seed:run --knexfile=knexfile.ts --verbose",
    "migrate": "knex migrate:latest --knexfile=knexfile.ts --verbose",
    "rollback": "knex migrate:rollback --knexfile=knexfile.ts --verbose",
    "make:seeder": "knex seed:make --knexfile=knexfile.ts",
    "make:migration": "knex migrate:make --knexfile=knexfile.ts",
    "lint": "eslint {src,scripts,test}/**/*.{ts,json} --no-error-on-unmatched-pattern",
    "lint:fix": "eslint --fix {src,scripts,test}/**/*.{ts,json} --no-error-on-unmatched-pattern"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build"
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "eslint --fix {src,scripts,test}/**/*.{ts,json} --no-error-on-unmatched-pattern"
    ]
  },
  "private": true,
  "license": "MIT",
  "keywords": [
    "api",
    "es6",
    "node",
    "express",
    "javascript",
    "typescript"
  ],
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "bookshelf": "^1.0.1",
    "bookshelf-case-converter-plugin": "^1.0.0",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "date-fns": "^2.11.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "http-status-codes": "^1.4.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "0.20.0",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.1",
    "nodemailer-markdown": "^1.0.3",
    "pg": "^7.12.1",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/bcrypt": "^3.0.0",
    "@types/bookshelf": "^0.13.3",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.1",
    "@types/faker": "^4.1.6",
    "@types/helmet": "^0.0.44",
    "@types/jest": "^24.0.20",
    "@types/joi": "^14.3.3",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.144",
    "@types/morgan": "^1.7.37",
    "@types/nodemailer": "^6.2.2",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^24.9.0",
    "backpack-core": "^0.8.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^4.1.0",
    "fork-ts-checker-webpack-plugin": "^2.0.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^10.0.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  }
}
